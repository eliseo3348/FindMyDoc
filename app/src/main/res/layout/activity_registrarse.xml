<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eliseo.findmydoc.Registrarse">

    <EditText
        android:layout_marginBottom="2px"
        android:layout_width="match_parent"
        android:id="@+id/nombre"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nombre"/>
    <EditText
        android:id="@+id/apellido"
        android:layout_marginBottom="2px"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:layout_below="@id/nombre"/>
    <EditText
        android:id="@+id/correo"
        android:layout_marginBottom="2px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo Electr칩nico"
        android:inputType="textEmailAddress"
        android:layout_below="@id/apellido"/>
    <EditText
        android:id="@+id/contrase침a"
        android:layout_marginBottom="2px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase침a"
        android:inputType="textPassword"
        android:layout_below="@id/correo"/>
    <EditText
        android:id="@+id/rut"
        android:layout_marginBottom="2px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rut"
        android:inputType="number"
        android:layout_below="@id/contrase침a"/>
    <Button
        android:id="@+id/registrarse"
        android:layout_marginTop="30px"
        android:layout_marginRight="40px"
        android:layout_width="350px"
        android:layout_height="wrap_content"
        android:text="Registrarse"
        android:layout_below="@id/rut"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>
