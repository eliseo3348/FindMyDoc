<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.eliseo.findmydoc.solicitarhora"
    tools:showIn="@layout/activity_solicitarhora">
    <TextView
        android:id="@+id/solicitarhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar hora"
        android:layout_centerHorizontal="true"/>
    <Spinner
        android:layout_marginTop="10px"
        android:id="@+id/spinner"
        android:layout_below="@id/solicitarhora"
        android:layout_width="fill_parent"
        android:hint="Seleccione una hora"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_marginTop="10px"
        android:id="@+id/buscarcentromedico"
        android:layout_width="match_parent"
        android:hint="Ingrese Centro MÃ©dico"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/botonbuscar"
        android:layout_below="@id/buscarcentromedico"
        android:text="Buscar"
        android:background="@color/colorGreen"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="100px"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
