<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eliseo.findmydoc.inicio">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bienvenido"
        android:text="Bienvenido"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60px" />
    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:id="@+id/perfil"
        android:text="Ver Perfil"
        android:layout_below="@id/bienvenido"
        android:layout_centerInParent="true"/>

    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:id="@+id/solicitarhora"
        android:layout_below="@id/perfil"
        android:layout_centerInParent="true"
        android:text="Solicitar Hora"/>
    <Button
        android:layout_width="800px"
        android:layout_height="wrap_content"
        android:id="@+id/verhoras"
        android:layout_below="@id/solicitarhora"
        android:layout_centerInParent="true"
        android:text="Ver Horas Solicitadas"/>
    <Button
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorRed"
        android:textColor="@color/colorWhite"
        android:text="Cerrar Sesion"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
